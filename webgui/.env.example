# BVPro Settings GUI - Environment Configuration
# Copy this file to .env and fill in the values

# Theme (must be 'bvpro' for this deployment)
SITE_THEME=bvpro

# Flask
FLASK_SECRET_KEY=your-secret-key-here

# SMTP Email
SMTP_SERVER=send.one.com
SMTP_PORT=587
SMTP_USER=noreply@bvpro.hem.se
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@bvpro.hem.se
FROM_NAME=BVPro Building Energy Management

# Base URL for email links
BASE_URL=https://bvpro.hem.se

# Admin notifications (comma-separated)
ADMIN_EMAILS=your-admin-email@example.com
