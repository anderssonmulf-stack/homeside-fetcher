[Unit]
Description=BVPro Settings GUI
After=network.target

[Service]
Type=simple
User=sa-ulf.andersson@corp.hem.se
WorkingDirectory=/srv/BVPro/webgui
EnvironmentFile=/srv/BVPro/webgui/.env
Environment="PATH=/srv/BVPro/webgui/venv/bin"
ExecStart=/srv/BVPro/webgui/venv/bin/gunicorn -b 127.0.0.1:5000 -w 2 app:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
